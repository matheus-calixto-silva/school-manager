{% extends "layout.njk" %}

{% block content %}
  <form class="card" method="POST" action="/teachers">
    <section class="avatar" style=" background: url(https://source.unsplash.com/collection/10553730/800x800) no-repeat center center"></section>
    
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Avatar URL</div>
        <div>
          <input type="url" name="avatar_url" placeholder="https://">
        </div>
      </div>

      <div class="item">
        <div>Nome</div>
        <div>
          <input type="text" name="name" placeholder="Nome completo">
        </div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>
          <input type="date" name="birth">
        </div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>
          <select name="educational level">
            <option value="Ensino Médio Completo">Ensino Médio Completo</option>
            <option value="Ensino Superior Completo">Ensino Superior Completo</option>
            <option value="Mestrado">Mestrado</option>
            <option value="Doutorado">Doutorado</option>
        </select>
        </div>
      </div>

      <div class="item">
        <div>Tipo de aula</div>
        <div>
          <input type="radio" name="type_class" value="Presencial" checked>Presencial
          <input type="radio" name="type_class" value="A distância">A distância
        </div>
      </div>

      <div class="item">
        <div>Área de atuação</div>
        <div>
          <input type="text" name="atuation_area" placeholder="Separe as matérias por virgula">
        </div>
      </div>


    <button type="submit">Salvar</button>
    </section>
  </form>
{% endblock content %}