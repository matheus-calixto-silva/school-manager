{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style=" background: url({{student.avatar_url}}) no-repeat center center; 
    background-size: cover;"></section>
    
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Nome</div>
        <div>{{student.name}}</div>
      </div>

      <div class="item">
        <div>Email</div>
        <div>{{student.email}}</div>
      </div>

      <div class="item">
        <div>Aniversário</div>
        <div>{{student.birth_date}}</div>
      </div>

      <div class="item">
        <div>Ano escolar</div>
        <div>{{student.school_year}}</div>
      </div>

      <div class="item">
        <div>Carga horária</div>
        <div>{{student.class_hours}} horas</div>
      </div>

      <div class="item">
        <div>Professor(a)</div>
        <div>{{student.teacher_name}}</div>
      </div>

      <a href="/students/{{student.id}}/edit" class="button">Editar</a>
    </section>
  </div>
{% endblock content %}