<div class="item">
  <div>Avatar URL</div>
  <div>
    <input type="url" name="avatar_url" placeholder="https://" value="{{teacher.avatar_url}}">
  </div>
</div>

<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" placeholder="Nome completo" value="{{teacher.name}}">
  </div>
</div>

<div class="item">
  <div>Idade</div>
  <div>
    <input type="date" name="birth_date" value="{{teacher.birth_date}}">
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="education_level">

      <option value="Ensino Médio Completo"
    {% if teacher.education_level == 'Ensino Médio Completo'  %}
    selected
    {% endif %}>Ensino Médio Completo</option>
      
      <option value="Ensino Superior Completo"
    {% if teacher.education_level == 'Ensino Superior Completo'  %}
    selected
    {% endif %}>Ensino Superior Completo</option>
      
      <option value="Mestrado"
    {% if teacher.education_level == 'Mestrado'  %}
    selected
    {% endif %}>Mestrado</option>
      
      <option value="Doutorado"
    {% if teacher.education_level == 'Doutorado'  %}
    selected
    {% endif %}
    >Doutorado</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Tipo de aula</div>
  <div>
    <input type="radio" name="class_type" value="Presencial" 
    {% if teacher.class_type == 'Presencial'  %}
    checked="checked"
    {% endif %}>Presencial
    <input type="radio" name="class_type" value="A distância"
    {% if teacher.class_type == 'A distância'  %}
    checked="checked"
    {% endif %}
    >A distância
  </div>
</div>

<div class="item">
  <div>Área de atuação</div>
  <div>
    <input type="text" name="subjects_taught" placeholder="Separe as matérias por virgula" value="{{teacher.subjects_taught}}">
  </div>
</div>

<button type="submit">Salvar</button>