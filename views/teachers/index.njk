{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <table style="width: 100%;">
      <a class="register" href="/teachers/create">Novo</a>
      <thead>
        <tr>
          <th>Instructor</th>
          <th>Atendimento</th>
          <th>Opções</th>
        </tr>
      </thead>

      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{teacher.avatar_url}})"></span>
              {{teacher.name}}
            </td>
            <td>{{teacher.atuation_area}}</td>
            <td>
              <a href="/teachers/{{teacher.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}