{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">

    <div class="header">
      <a class="register" href="/teachers/create">Novo</a>
      <form action="/teachers?" method="GET">
        <input type="text" name="filter" placeholder="Nome ou disciplina" value="{{filter}}">
        <button type="submit">Filtrar</button>
      </form>
    </div>


    <table style="width: 100%;">
      <thead>
        <tr>
          <th>Instructor</th>
          <th>disciplina(s)</th>
          <th>Alunos</th>
          <th>Opções</th>
        </tr>
      </thead>

      <tbody>
        {% for teacher in teachers %}
          <tr>
            <td>
              <span style="background-image: url({{teacher.avatar_url}})"></span>
              {{teacher.name}}
            </td>
            <td>{{teacher.subjects_taught}}</td>
            <td>{{teacher.total_students}}</td>
            <td>
              <a href="/teachers/{{teacher.id}}">Ver</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock content %}